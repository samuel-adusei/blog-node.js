<% include ./partials/header %>


	<%= blog.title %>	<!-- shows the title of our blogs -->
      <img src="<%= blog.image %>" >	
         <span><%= blog.created.toDateString() %></span>
             <p><%- blog.body %></p>
            
            <a href="/blogs/<%= blog._id %>/edit">Edit</a>	<!-- This ._id shows the id of the blog -->
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">	<!-- the  %>_method=DELETE this uses the methodoverride which allows us to delete it -->
		
                <button class="ui red basic button">Delete</button>
            </form>
			
			<% include ./partials/footer %>
